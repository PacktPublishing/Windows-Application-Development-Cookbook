<!--
    Exemplary file for Chapter 8 - Internet-based Scenarios.
    Recipe: Sending an e-mail message.
-->

<Page
    x:Class="CH08.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CH08"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <Button
            Content="Send to one recipient"
            HorizontalAlignment="Stretch"
            Padding="20"
            Margin="20 10"
            Click="BtnSendOneRecipient_Click" />
        <Button
            Content="Send to many recipients"
            HorizontalAlignment="Stretch"
            Padding="20"
            Margin="20 10"
            Click="BtnSendManyRecipients_Click" />
        <Button
            Content="Send with an attachment"
            HorizontalAlignment="Stretch"
            Padding="20"
            Margin="20 10"
            Click="BtnSendWithAttachment_Click" />
    </StackPanel>
</Page>
