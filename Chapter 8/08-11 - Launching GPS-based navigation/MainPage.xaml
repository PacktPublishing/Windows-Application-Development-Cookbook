<!--
    Exemplary file for Chapter 8 - Internet-based Scenarios.
    Recipe: Launching GPS-based navigation.
-->

<Page
    x:Class="CH08.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CH08"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel 
        VerticalAlignment="Center"
        Padding="20">
        <TextBox
            x:Name="TxtLatitude"
            InputScope="Number"
            Header="Destination latitude"
            Margin="0 10" />
        <TextBox
            x:Name="TxtLongitude"
            InputScope="Number"
            Header="Destination longitude"
            Margin="0 10" />
        <Button
            Content="Start navigation to the destination"
            HorizontalAlignment="Stretch"
            Margin="0 10"
            Padding="10"
            Click="BtnNavigate_Click" />
    </StackPanel>
</Page>
